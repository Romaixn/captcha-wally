{% extends 'base.html.twig' %}

{% block title %}Captcha Wally (Waldo, Charlie){% endblock %}

{% block body %}
    <div class="container mx-auto px-4">
        <h1 class="text-2xl">Captcha Wally (Waldo)</h1>

		<div class="image__wrapper">
			{% for image in images %}
				<figure class="image" style="--grid-col: {{ image.col + 1 }};--grid-row: {{ image.row + 1 }}">
					{# Maybe find a way to build this path dynamically from ImageSplitter::output_dir param #}
					<img src="{{ asset( 'build/images/captcha/splitted/' ~ image.name ) }}" alt="Where is Wally ?" />
				</figure>
			{% endfor %}
		</div>
    </div>
{% endblock %}
